<div class="card mt-2" style="width: 60%; margin: 0 auto;">

    {{#if error}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{error}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}

    {{#if success}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{success}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}

    <form class="p-4" method="post">
        <div class="form-group">
            <label for="exampleInputname">Company name</label>
            <input type="text" class="form-control" name="companyName" id="exampleInputname"
                required {{#if error}}value="{{data.companyName}}" {{/if}}>
        </div>
        <div class="form-group">
            <label for="exampleInputname">Full name</label>
            <input type="text" class="form-control" name="name" id="exampleInputname"
                required {{#if error}}value="{{data.name}}" {{/if}}>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
                required {{#if error}}value="{{data.email}}" {{/if}}>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPhone">Phone</label>
            <input type="text" name="phone" class="form-control" id="exampleInputPhone" 
            required {{#if error}}value="{{data.phone}}" {{/if}}>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>